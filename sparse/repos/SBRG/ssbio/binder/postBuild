# Install FreeSASA
mkdir ~/software/freesasa
cd ~/software/freesasa
wget http://freesasa.github.io/freesasa-2.0.3.tar.gz
tar -zxf freesasa-2.0.3.tar.gz
cd freesasa-2.0.3
./configure --disable-json --disable-xml
make
ln -s $HOME/software/freesasa/freesasa-2.0.3/src/freesasa ~/.local/bin/freesasa

